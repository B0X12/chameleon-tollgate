<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <solid android:color="#ffd05d"/>
            <size
                android:height="40px"
                android:width="702px"/>
            <stroke
                android:width="3dp"
                android:color="#ffd05d"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <solid android:color="#ffc840"/>
            <size
                android:height="40px"
                android:width="702px"/>
            <stroke
                android:width="3dp"
                android:color="#ffc840"/>
        </shape>
    </item>

</selector>